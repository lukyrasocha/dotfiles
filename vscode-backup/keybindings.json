// Place your key bindings in this file to override the defaultsauto[]
[
	// Switch between file explorer and editor (only when inside a normal mode) also opens the file explorer if it was closed
	{
		"key": "shift+t",
		"command": "workbench.view.explorer",
		"when": "viewContainer.workbench.view.explorer.enabled && vim.mode == 'Normal'"
	},
	{
		"key": "shift+cmd+e",
		"command": "-workbench.view.explorer",
		"when": "viewContainer.workbench.view.explorer.enabled"
	},
	// Toggle between terminal and editor focus
	{
		"key": "ctrl+t",
		"command": "workbench.action.terminal.focus"
	},
	{
		"key": "ctrl+t",
		"command": "workbench.action.focusActiveEditorGroup",
		"when": "terminalFocus"
	},
	{
		"key": "m f",
		"command": "explorer.newFile",
		"when": "explorerViewletFocus && !inputFocus"
	},
	{
		"key": "m d",
		"command": "explorer.newFolder",
		"when": "explorerViewletFocus && !inputFocus"
	},
	{
		"key": "d d",
		"command": "deleteFile",
		"when": "explorerViewletFocus && !inputFocus"
	},
	{
		"key": "r",
		"command": "renameFile",
		"when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
	},
	{
		"key": "enter",
		"command": "list.select",
		"when": "listFocus && !inputFocus"
	},
	{
		"key": "o",
		"command": "list.select",
		"when": "listFocus && !inputFocus"
	},
	{
		"key": "alt+[IntlBackslash]",
		"command": "notebook.cell.chat.accept",
		"when": "inlineChatFocused && notebookCellChatFocused"
	},
	{
		"key": "enter",
		"command": "-notebook.cell.chat.accept",
		"when": "inlineChatFocused && notebookCellChatFocused"
	},
	{
		"key": "shift+i",
		"command": "notebook.cell.edit",
		"when": "notebookCellListFocused && notebookEditable && !editorHoverFocused && !inputFocus"
	},
	{
		"key": "enter",
		"command": "-notebook.cell.edit",
		"when": "notebookCellListFocused && notebookEditable && !editorHoverFocused && !inputFocus"
	}
]

